<% include ./partials/header %>
    <div class="row">
        <div class="col-md-12">
            <form class="form-signin" action="/login" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> 
                <div class="form-group">
                    <label for="inputUsername" class="sr-only">User ID/Name</label>
                    <input class="form-control" id="inputUsername" type="text" name="username" placeholder="enter id/name" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="sr-only">Enter Password</label>
                    <input class="form-control" id="inputPassword" type="password" name="password" placeholder="password" required>
                </div>
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
                <div>
                    <a class="btn btn-sm btn-primary btn-block" href="/forgot">Forgot ID/Password?</a>
                </div>
            </form>
            <form class="form-signin">
                <a href="/campsites">Go Back</a>
            </form>
        </div>
    </div>
<% include ./partials/footer %>


