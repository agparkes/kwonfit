<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Login</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/login" method="post">
                <div class="form-group">
                    <label for="username">User ID/Name</label>
                    <input class="form-control" type="text" name="username" placeholder="enter id/name">
                </div>
                <div class="form-group">
                    <label for="password">Enter Password</label>
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
                <div>
                    <a class="btn btn-sm btn-primary btn-block" href="/forgot">Forgot ID/Password?</a>
                </div>
            </form>
            <a href="/campsites">Go Back</a>
        </div>
    </div>
<% include ./partials/footer %>