        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to KwonFit!</h1>
		<a href="/campsites" class="btn btn-lg btn-success">View All Campsites</a>
